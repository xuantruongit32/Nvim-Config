{
  "languageserver": {
    "java": {
      "command": "java",
      "args": [
        "-jar",
        "/path/to/eclipse.jdt.ls/plugins/org.eclipse.equinox.launcher_1.6.0.v20210112-1311.jar",
        "-configuration",
        "/path/to/eclipse.jdt.ls/config_linux",
        "-data",
        "/path/to/eclipse.jdt.ls/workspace",
        "--add-modules=ALL-SYSTEM",
        "--add-opens",
        "java.base/java.util=ALL-UNNAMED",
        "--add-opens",
        "java.base/java.lang=ALL-UNNAMED"
      ],
      "filetypes": ["java"],
      "initializationOptions": {
        "workspace": {
          "didChangeConfiguration": {
            "java": {
              "organizeImports": true
            }
          }
        }
      }
    },
    "clangd": {
      "command": "clangd",
      "rootPatterns": [".clangd", "compile_commands.json", ".git/", ".hg/"],
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
        "clangd.semanticHighlighting": true
      }
    }
  }
}

